<Window x:Class="Library_Project.Resources.Windows.SearchedBookWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Library_Project.Resources.Windows"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        mc:Ignorable="d"
        Height="400" Width="1000" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"  WindowStyle="None">
    <Grid Background="#FF0032B8">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="WhiteSmoke" BorderBrush="WhiteSmoke"  VerticalAlignment="Center" BorderThickness="25" CornerRadius="20" Margin="10,30,10,20" Height="625" Grid.RowSpan="3"/>

        <Label Content="اطلاعات کتاب" Width="200" FontSize="30" Margin="0,32,0,10" FlowDirection="RightToLeft" FontWeight="Bold"/>
        
        <DataGrid Grid.Row="1" x:Name="BooksSearchData" Height="170" Margin="20" Visibility="Collapsed" RowBackground="LightYellow" AlternatingRowBackground="LightBlue" BorderBrush="Gray" BorderThickness="5" FlowDirection="RightToLeft" Background="WhiteSmoke" CanUserAddRows="False" AutoGenerateColumns="False" FontFamily="Tahoma">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ردیف"/>
                <DataGridTextColumn Header="نام کتاب" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="نویسنده" Binding="{Binding Author}"/>
                <DataGridTextColumn Header="ژانر" Binding="{Binding Category}"/>
                <DataGridTextColumn Header="شماره نشر" Binding="{Binding PublishNumber}"/>
                <!--<DataGridTextColumn Header="تاریخ امانت" Binding="{Binding gotDate}"/>-->
                <!--<DataGridTextColumn Header="تاریخ برگشت" Binding="{Binding returnDate}"/>-->
                <!--<DataGridTextColumn Header="روزهای باقیمانده" Binding="{Binding remainDate}"/>-->
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Style="{DynamicResource MaterialDesignRaisedAccentButton}" materialDesign:ButtonAssist.CornerRadius="20" Width="200" Height="50" Margin="400,10,120,45" Background="#FFC7B60D" Click="Return_Click" FontWeight="Black" FontSize="20" Content="بازگشت"/>
        </StackPanel>
    </Grid>
</Window>
