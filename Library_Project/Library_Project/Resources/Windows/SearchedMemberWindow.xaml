<Window x:Class="Library_Project.Resources.Windows.SearchedMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Library_Project.Resources.Windows"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        mc:Ignorable="d"
        Height="700" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"  WindowStyle="None">
    <Grid Background="#FF0032B8">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="WhiteSmoke" BorderBrush="WhiteSmoke"  VerticalAlignment="Center" BorderThickness="34" CornerRadius="5" Margin="10,58,10,0" Height="409">
            <StackPanel Orientation="Vertical">
                <Image x:Name="image" Margin="50,0,50,50"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="txtUsername" Width="280" Height="40" Margin="15,30,10,10" Background="#FFE8E9F3" Foreground="#FF424141" FontWeight="Bold" FlowDirection="RightToLeft"/>
                    <materialDesign:PackIcon Margin="5,35,20,15" Kind="RenameBox" Width="50" Height="50" Foreground="#FF0032B8"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="txtEmail" Width="280" Height="40" Margin="15,30,10,10" Background="#FFE8E9F3" Foreground="#FF424141" FontWeight="Bold" FlowDirection="RightToLeft"/>
                    <materialDesign:PackIcon Margin="5,35,20,15" Kind="Email" Width="50" Height="50" Foreground="#FF0032B8"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="txtPhoneNumber" Width="280" Height="40" Margin="15,30,10,10" Background="#FFE8E9F3" Foreground="#FF424141" FontWeight="Bold" FlowDirection="RightToLeft"/>
                    <materialDesign:PackIcon Margin="5,35,20,15" Kind="MobilePhone" Width="50" Height="50" Foreground="#FF0032B8"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Style="{DynamicResource MaterialDesignRaisedAccentButton}" Width="150" Height="75" Margin="140,82,120,77" Background="#FFC76615" Click="Return_Click" FontWeight="Black" FontSize="22" Content="بازگشت"/>
        </StackPanel>
    </Grid>
</Window>